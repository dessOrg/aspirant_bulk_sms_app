<!DOCTYPE html>
<html>
<% include ../partials/admin-head %>
<body>
    <div id="wrapper">
        <% include ../partials/admin-nav %>
           <!-- /. NAV TOP  -->
                <% include ../partials/admin-side %>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper" >
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                      <div class="panel panel-default">
                          <div class="panel-heading">
                              <h2>Tables</h2>
                          </div>
                          <div class="panel-body">
                              <ul class="nav nav-tabs">

                                  <li class="active"><a href="#contacts" data-toggle="tab">Generate Text</a></li>
                                  <li class=""><a href="#view" data-toggle="tab">View Saved Texts</a></li>
                              </ul>

                              <div class="tab-content">

                                     <!-- Tab Content -->
                                  <div class="tab-pane fade active in" id="contacts">

                                      <div class="row">

                                      <div class="col-md-12">
                                           <!--    Context Classes  -->
                                           <!-- Form Elements -->
                                           <div class="panel panel-default">
                                               <div class="panel-heading">
                                                   Type SMS to be send:
                                               </div>
                                               <div class="panel-body">
                                                 <div class="row">
                                                   <div class="col-md-2"></div>
                                                 <div class="col-md-6">
                                                 <form method="post" action="/text/new" >
                                                   <div class="row">
                                                       <div class="col-md-12">
                                                         <div class="form-group">
                                                             <label>Text Area</label>
                                                             <textarea name="sms" class="form-control" rows="3" required="true"></textarea>
                                                         </div>
                                                       </div>
                                                   </div>
                                                   <div class="row">
                                                     <div class="col-lg-offset-4 col-lg-6">
                                                     <input class="btn btn-success" type="submit" value="Save">
                                                     <input class="btn btn-primary" type="reset" value="Reset">
                                                   </div>
                                                   </div>
                                                   </form>
                                                   </div>
                                                   </div>
                                               </div>
                                           </div>
                                            <!-- End Form Elements -->
                                          <!--  end  Context Classes  -->
                                      </div>
                                  </div>
                                      <!-- /. ROW  -->
                                  </div>
                                 <!-- End of Tab -->
                                 <!-- Tab Content -->
                              <div class="tab-pane fade " id="view">

                                  <div class="row">
                                  <div class="col-md-12">
                                       <!--    Context Classes  -->
                                       <!-- Form Elements -->
                                       <div class="panel panel-default">
                                           <div class="panel-heading">

                                           </div>
                                           <div class="panel-body">
                                            <% for(i=0; i<bulks.length; i++) { %>
                                               <div class="row">

                                                   <div class="col-md-6">

                                                     <div class="form-group">
                                                         <p><%= bulks[i].sms %></p>
                                                     </div>

                                                   </div>
                                                   <div class="col-md-6">
                                                     <a href="/user/sms/<%=bulks[i].id %>" class="btn btn-success">Send</a>
                                                   <a class="btn btn-primary" data-toggle="modal" data-target="#<%= bulks[i].id %>" >Update</a>
                                                 </div>


                                               </div>
                                            <hr>
                                             <% } %>
                                           </div>
                                       </div>
                                        <!-- End Form Elements -->
                                      <!--  end  Context Classes  -->
                                  </div>
                              </div>
                                  <!-- /. ROW  -->
                              </div>
                             <!-- End of Tab -->

                              </div>
                          </div>
                      </div>

                    </div>
                </div>
                 <!-- /. ROW  -->
                 <!-- Modal start -->
                 <% for(i=0; i<bulks.length; i++) { %>
                 <div class="modal fade" id="<%= bulks[i].id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                               <div class="modal-dialog">
                                   <div class="modal-content">
                                       <div class="modal-header">
                                           <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                           <h4 class="modal-title" id="myModalLabel">Modal title Here</h4>
                                       </div>
                                       <div class="modal-body">
                                           <%= bulks[i].sms %>
                                       </div>
                                       <div class="modal-footer">
                                           <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                           <button type="button" class="btn btn-primary">Save changes</button>
                                       </div>
                                   </div>
                               </div>
                           </div>
                           <% } %>
                 <!-- Modal Ends -->

    </div>
             <!-- /. PAGE INNER  -->
            </div>
         <!-- /. PAGE WRAPPER  -->
        </div>
     <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <% include ../partials/admin-scripts %>


</body>
</html>
