<!DOCTYPE html>
<html >
<% include ../partials/admin-head %>
<body>
  <div id="wrapper">
      <% include ../partials/admin-nav %>
         <!-- /. NAV TOP  -->
            <% include ../partials/admin-side %>
      <!-- /. NAV SIDE  -->
      <div id="page-wrapper" >
          <div id="page-inner">
              <div class="row">
                  <div class="col-md-4">
                   <h2>Welcome <%= user.firstname %> </h2>
                      <h5>Love to see you back. </h5>
                  </div>
                  <div class="col-md-6">
                    <h3 style="color : blue">For custom plan : 1 token cost KES 1.50</h3>
                    <% if (success_msg){ %>
                      <div data-alert class="alert-box alert success radius" style="color : green">
                        <%= success_msg %>
                      </div>
                    <% } if (error_msg){ %>
                      <div data-alert class="alert-box warning radius" style="color : red">
                        <%= error_msg %>
                      </div>

                      <% } %>

                  </div>
                  <div class="col-md-2">
                    <br><br>
                   <a class="btn btn-primary" data-toggle="modal" data-target="#token" >Purchase Tokens</a>
                  </div>
              </div>
               <!-- /. ROW  -->
               <div class="modal fade" id="token" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                             <div class="modal-dialog">
                                 <div class="modal-content">
                                   <form id="contact-form" method="POST" action="/token/order">
                                     <div class="modal-header">
                                         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                         <h4 class="modal-title" id="myModalLabel">Send Money to 0792746432 and Paste mpesa code Here</h4>
                                     </div>
                                     <div class="modal-body">
                                       <div class="form-group input-group">
                                        <span class="input-group-addon">MPESA CODE</span>
                                        <input type="text" name="code" class="form-control" placeholder="e.g LBG65RMS42"required="true">
                                        </div>
                                       <div class="form-group input-group">
                                        <span class="input-group-addon">SELECT PLAN</span>
                                        <select class="form-control" id="plan" name="plan" >
                                          <option value="Custom">Custom Plan (1 Token per KES 1.5000)</option>
                                          <option value="Basic">Basic Plan</option>
                                          <option value="Premier">Premier Plan</option>
                                          <option value="Executive">Executive Plan</option>

                                        </select>
                                    </div>
                                     </div>
                                     <div class="modal-footer">
                                         <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                         <button type="submit" class="btn btn-primary">Submit</button>
                                     </div>
                                   </form>
                                 </div>
                             </div>
                         </div>
                         <!-- modal ends  -->
                <hr />
              <div class="row">
              <div class="col-md-3 col-sm-6 col-xs-6">
    <div class="panel panel-back noti-box">
              <span class="icon-box bg-color-red set-icon">
                  <i class="fa fa-envelope-o"></i>
              </span>
              <div class="text-box" >
                  <p class="main-text"><%= messages %> Send</p>
                  <p class="text-muted">Messages</p>
              </div>
           </div>
       </div>
                  <div class="col-md-3 col-sm-6 col-xs-6">
    <div class="panel panel-back noti-box">
              <span class="icon-box bg-color-green set-icon">
                  <i class="fa fa-bars"></i>
              </span>
              <div class="text-box" >
                  <p class="main-text"> <%= contacts %> Saved </p>
                  <p class="text-muted">Contacts</p>
              </div>
           </div>
       </div>
                  <div class="col-md-3 col-sm-6 col-xs-6">
    <div class="panel panel-back noti-box">
              <span class="icon-box bg-color-blue set-icon">
                  <i class="fa fa-money"></i>
              </span>
              <div class="text-box" >
                <% for(i=0; i<tokens.length; i++) { %>
                  <p class="main-text"><%= tokens[i].tokens %> Tokens</p>
                  <p class="text-muted">Remaining</p>
                  <% } %>
              </div>
           </div>
       </div>
                  <div class="col-md-3 col-sm-6 col-xs-6">
    <div class="panel panel-back noti-box">
              <span class="icon-box bg-color-brown set-icon">
                  <i class="fa fa-rocket"></i>
              </span>
              <div class="text-box" >
                  <p class="main-text"><%= pending %> Orders</p>
                  <p class="text-muted">Pending</p>
              </div>
           </div>
       </div>
    </div>
               <!-- /. ROW  -->

                 <!-- /. ROW  -->
                <hr />
                <div class="row">
                    <div class="col-md-4 col-sm-12 col-xs-12">
                      <div class="panel text-center no-boder " style="background-color:silver">

                             <i class="fa fa-comments-o fa-5x"></i><strong> &nbsp;Basic Plan</strong>
                             <h4>Get 1000 Tokens </h4>
                              <h4>For KES 1400 Only  </h4>
                              <div class="panel-footer back-footer-green">
                           <a class="btn btn-success back-footer-green" data-toggle="modal" data-target="#token" >Get This Plan</a>
                         </div>
                     </div>
		     </div>


                    <div class="col-md-4 col-sm-12 col-xs-12">
                      <div class="panel ">
                      <div class="main-temp-back">
                        <div class="panel-body">
                           <i class="fa fa-link fa-3x"></i><strong> &nbsp; Premier Plan</strong>
                           <h4>Get 5000 Tokens </h4>
                            <h4>For KES 6500 Only  </h4>


                        </div>
                        <div class="panel-footer back-footer-green">
                     <a class="btn btn-success back-footer-green" data-toggle="modal" data-target="#token" >Get This Plan</a>
                   </div>
                      </div>

                   </div>

                    </div>
                    <div class="col-md-4 col-sm-12 col-xs-12 ">

                      <div class="panel main-temp-back" style="background-color:brown">
                        <div class="panel-body">
                             <i class="fa fa-check fa-2x"></i><strong> &nbsp; Executive Plan</strong>
                             <h4>Get 10000 Tokens </h4>
                              <h4>For KES 12000 Only  </h4>
                              </div>
                              <div class="panel-footer back-footer-green">
                           <a class="btn btn-success back-footer-green" data-toggle="modal" data-target="#token" >Get This Plan</a>
                         </div>
                      </div>

    </div>

        </div>
                 <!-- /. ROW  -->
              <hr />


               <!-- /. ROW  -->
              <div class="row" >

                  <div class="col-md-12 col-sm-12 col-xs-12">

                  <div class="panel panel-default">
                      <div class="panel-heading">
                         Tokens History
                      </div>
                      <div class="panel-body">
                          <div class="table-responsive">
                              <table class="table table-striped table-bordered table-hover">
                                  <thead>
                                      <tr>
                                          <th>#</th>
                                          <th>Mpesa Code</th>
                                          <th>Plan</th>
                                          <th>Tokens</th>
                                          <th>Cost</th>
                                          <th>Date</th>
                                          <th>Status</th>

                                      </tr>
                                  </thead>
                                  <tbody>
                                    <% for(i=0; i<orders.length; i++) { %>
                                      <tr>
                                          <td><%= i+1 %></td>
                                          <td><%= orders[i].code %></td>
                                          <td><%= orders[i].plan %></td>
                                          <td><% if(orders[i].tokens){ %>
                                            <%= orders[i].tokens %>
                                          <%}else {%>
                                            -
                                            <%} %></td>
                                          <td><% if(orders[i].amount){ %>
                                            KES <%= orders[i].amount %>
                                            <%}else {%>
                                              -
                                              <%} %></td>
                                          <td><%= orders[i].date %></td>
                                          <td><%= orders[i].status %></td>

                                      </tr>
                                    <% } %>
                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>

                  </div>
              </div>
               <!-- /. ROW  -->


  </div>
           <!-- /. PAGE INNER  -->
          </div>
       <!-- /. PAGE WRAPPER  -->
      </div>
     <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <% include ../partials/admin-scripts %>


</body>
</html>
